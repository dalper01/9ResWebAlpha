<div class="row" ng-app="indexModule">

    <div class="col-md-4">

        <span style="display: block; text-align: center; font-weight: bolder;">
             Advantages
            <img src="@Url.Content("~/content/images/9resAdvantages.png")" height="400px">
        </span>
    </div>


    <div class="col-md-4">

        <span style="display: block; text-align: center; font-weight: bolder;">
            Format
            <img src="@Url.Content("~/content/images/9resViewFormat.png")" height="400px">
        </span>


    </div>


    <div class="col-md-4" ng-controller="indexController">

        <span style="display: block; text-align: center; font-weight: bolder;">
            Let's Get Started with!
        </span>

        <img ng-src="{{ getStartedSrc }}" height="400px" ng-mouseenter="changeStartImg('@Url.Content("~/content/images/9resGetStarted_hover.png")')"
